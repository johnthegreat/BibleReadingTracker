<h1>Forgot Password</h1>

<form method="post" action="/account/forgot">
	<input type="hidden" name="_csrf" value="{{_csrf}}">
	<p>Enter your email address below and we will send you password reset instructions.</p>

	<div class="row">
		<div class="col-lg-6">
			<div class="form-group">
				<label class="col-form-label font-weight-bold text-right" for="email">Email</label>
				<input class="form-control" type="email" name="email" id="email" placeholder="Email" autofocus="autofocus" autocomplete="email" required="required">
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6">
			<div class="form-group">
				<button class="btn btn-primary" type="submit">
					<i class="fas fa-key fa-sm"></i> Reset Password
				</button>
			</div>
		</div>
	</div>
</form>
